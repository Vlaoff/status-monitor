{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es2018",
    "module": "ESNext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "lib": [
      "esnext",
      "es2016",
      "esnext.asynciterable"
    ],
    "sourceMap": false,
    "declaration": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules/*"
  ],
  "baseUrl": "types",
  "typeRoots": [
    "types"
  ]
}
